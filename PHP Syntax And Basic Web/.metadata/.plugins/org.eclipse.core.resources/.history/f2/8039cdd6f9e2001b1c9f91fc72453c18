	<?php 
	if(isset($_GET['num']))
	{
	    $num = intval($_GET['num']);
	    for($i = 1; $i <= $num; $i++)
	    {
	       $result = $i;
	       $result1 = $i+1;
	       $result2 = $i+(i+1);
	       echo $result,$result1,$result2;
	    }
	}
